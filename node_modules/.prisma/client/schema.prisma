generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int            @id @default(autoincrement())
  nome          String
  email         String         @unique
  senha         String
  tasks         Task[]
  taskPrincipal TaskPrincipal?
}

model Task {
  id        Int             @id @default(autoincrement())
  nome      String          @unique
  tipos     CategoriaTask[]
  descricao String
  usuario   Usuario         @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId Int
}

model CategoriaTask {
  id            Int             @id @default(autoincrement())
  nome          String          @unique
  task          Task[]
  taskPrincipal TaskPrincipal[]
}

model TaskPrincipal {
  id        Int             @id @default(autoincrement())
  nome      String
  tipos     CategoriaTask[]
  descricao String
  usuario   Usuario         @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId Int             @unique
}

model Log {
  id         Int      @id @default(autoincrement())
  nomeTabela String
  operacao   String
  antiga     Json?
  nova       Json?
  data       DateTime @default(now())
}
